<section class = 'container'>
    <div class = 'mb-5'>
        <h1>Tarea: <%= @tarea.name%></h1>
    </div>
    <div class = 'row'>
        <div class = 'col-md-6'>
            <h2>Ultimos 5 usuarios:</h2>
            <ul>
                <% @last.each do |last| %>
                    <% if last.completed == true %>
                        <li>
                            <%= last.user.email %>
                        </li>
                    <%end%>
                <%end%>
            </ul>
        </div>
        <div class = 'col-md-6'>
            <h2>Usuarios que han completado la tarea</h2>
            <ul>
                <% @usuarios.each do |usuario| %>
                    <% if usuario.completed == true %>
                        <li>
                            <%= usuario.user.email %>
                        </li>
                    <%end%>
                <%end%>
            </ul>
        </div>
    </div>
</section>